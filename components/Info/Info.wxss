.iMain {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: .6s;
}

.iItem {
  text-align: center;
  font-size: 1rem;
  padding: 20rpx;
  margin-bottom: 30rpx;
  width: 89vw;
  line-height:4rem;
  border-radius: 10px;
  transition: .5s;
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
}

.dark {
  color: #dfe6e9;
}

.content {
  transition: 1.5s;
}

.sumItem {
  transition: .5s;
}

.title {
  margin: 20rpx;
  padding: 40rpx;
  padding-left: 46rpx;
  width: 40%;
  transition: 1s;
  text-align: center;
  position: relative;
  overflow: hidden;
  z-index: 99;
  margin-bottom: 20rpx;
}

.title:after {
  position: absolute;
  transition: 1s;
  content: '';
  width: 0;
  left: 50%;
  bottom: 0;
  height: 3px;
  background: #dfe6e9;
}

.title.active {
  letter-spacing: .4rem;
  font-size: 1.2rem;
}

.title.active:after {
  width: 100%;
  left: 0;
}

