.skMain {
  display: flex;
  flex-direction: column;
  align-items: center;

}

.skItem {
  text-align: left;
  font-size: 1rem;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  width: 86vw;
  line-height: 1.5rem;
  border-radius: 10px;
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
  white-space: pre-wrap;
  transition: .5s;
}

.dark {
  color: #dfe6e9;
}